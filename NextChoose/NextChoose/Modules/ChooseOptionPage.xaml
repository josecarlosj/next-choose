<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NextChoose.Modules.ChooseOptionPage"
             Title="Escolher">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     Margin="16">

            <Label Text="Opção selecionada:"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Margin="0, 16, 0, 0"/>

            <Label x:Name="lblSelectedOption"
                   FontSize="Large"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="WordWrap"
                   MaxLines="2"
                   Text="{Binding SelectedOption}"/>

            <Button x:Name="btnChooseOption"
                    VerticalOptions="End"
                    HeightRequest="50"
                    CornerRadius="25"
                    Text="Escolher"
                    Clicked="ChooseOption_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
